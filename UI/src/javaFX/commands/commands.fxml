<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaFX.commands.CommandsController">

    <!-- Column and Row Size Controls with Spinner -->
    <HBox alignment="CENTER_LEFT" prefHeight="25.0" spacing="10">
        <Label prefHeight="17.0" prefWidth="135.0" text="Column Width" />
        <Spinner fx:id="columnWidthSpinner" initialValue="10" max="100" min="1" onMouseReleased="#handleSetColumnWidth" prefHeight="25.0" prefWidth="100.0" />
    </HBox>

    <HBox alignment="CENTER_LEFT" prefHeight="25.0" spacing="10">
        <Label prefHeight="17.0" prefWidth="135.0" text="Row Height" />
        <Spinner fx:id="rowHeightSpinner" initialValue="10" max="100" min="1" onMouseReleased="#handleSetRowHeight" prefHeight="25.0" prefWidth="100.0" />
    </HBox>

    <!-- Alignment ComboBox -->
    <HBox alignment="CENTER_LEFT" prefHeight="25.0" spacing="10">
        <Label prefHeight="17.0" prefWidth="135.0" text="Text Alignment" />
        <ComboBox fx:id="alignmentComboBox" prefWidth="100.0" onAction="#handleSetColumnAlignment" />
    </HBox>

    <HBox alignment="CENTER_LEFT" minHeight="30.0" prefHeight="35.0" prefWidth="180.0" spacing="10">
        <Label prefHeight="17.0" prefWidth="91.0" text="Background Color" />
        <ColorPicker fx:id="bgColorPicker" onAction="#handleApplyBackgroundColor" prefHeight="35.0" prefWidth="85.0" />
    </HBox>

    <HBox alignment="CENTER_LEFT" minHeight="30.0" prefHeight="35.0" prefWidth="180.0" spacing="10">
        <Label prefHeight="17.0" prefWidth="91.0" text="Text Color" />
        <ColorPicker fx:id="textColorPicker" onAction="#handleApplyTextColor" prefHeight="35.0" prefWidth="85.0" />
    </HBox>

    <!-- Reset Cell Design Button -->
    <Button onAction="#handleResetCellDesign" text="Reset Cell Design" />

</VBox>
