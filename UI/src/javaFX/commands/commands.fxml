<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaFX.commands.CommandsController" spacing="10" alignment="CENTER" style="-fx-padding: 10;">

    <!-- Column and Row Size Controls -->
    <Label text="Set Column Width"/>
    <TextField fx:id="columnWidthInput" promptText="Enter column width" />
    <Button text="Set Column Width" onAction="#handleSetColumnWidth"/>

    <Label text="Set Row Height"/>
    <TextField fx:id="rowHeightInput" promptText="Enter row height" />
    <Button text="Set Row Height" onAction="#handleSetRowHeight"/>

    <!-- Background Color Picker -->
    <Label text="Background Color"/>
    <ColorPicker fx:id="bgColorPicker"/>
    <Button text="Apply Background Color" onAction="#handleApplyBackgroundColor"/>

    <!-- Text Color Picker -->
    <Label text="Text Color"/>
    <ColorPicker fx:id="textColorPicker"/>
    <Button text="Apply Text Color" onAction="#handleApplyTextColor"/>

    <!-- Reset Cell Design Button -->
    <Button text="Reset Cell Design" onAction="#handleResetCellDesign"/>

</VBox>
