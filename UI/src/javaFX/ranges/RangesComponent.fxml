<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="javaFX.ranges.RangeController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #FFD700;" prefWidth="250">

    <Label text="Manage Ranges" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <TextField fx:id="rangeNameField" promptText="Range Name"/>
    <TextField fx:id="rangeCellsField" promptText="Range Cells (e.g., A1:B3)"/>
    <Button text="Add Range" onAction="#handleAddRange"/>
    <Button text="Delete Range" onAction="#handleDeleteRange"/>

    <Label text="Available Ranges:"/>
    <ListView fx:id="rangeListView" prefHeight="200"/>
    <Button text="Highlight Selected Range" onAction="#handleRangeSelection"/>

</VBox>
